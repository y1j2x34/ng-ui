{
    "webserver":{
        "port": 8787,
        "livereload": true,
        "directoryListening": true,
        "open": false
    },
    "env": "opitimized",
    "source": {
        "js": [
            "src/app/**/*.controller.js",
            "src/app/**/*.service.js",
            "src/app/**/*.factory.js",
            "src/app/**/*.provider.js",
            "src/app/**/*.filter.js",
            "src/app/**/*.module.js",
            "src/app/**/*.config.js",
            "src/app/**/*.directive.js",
            "src/app/*.js",
            "src/app/grid/renderers/*.js",
            "src/app/**/*-require.js"
        ]
    },
    "partials": {
        "sources": ["./src/partials/**/*.html"],
        "html2jsOptions": {
            "moduleName": "ngUI.partials",
            "prefix": "src/partials/"
        },
        "minifyHtmlOptions": {
            "empty": true,
            "spare": true,
            "quotes": true
        },
        "concatName": "partials.js",
        "destPath": "./dist"
    },
    "sass": {
        "dest": "./dist/css",
        "options": {},
        "sourcemap": {
            "initOptions": {},
            "writeOptions": {
                "includeContent": true,
                "debug": true
            }
        }
    },
    "opitimize": {
        "dest": "./dist",
        "useStrict": true,
        "sourcemap": {
            "initOptions": {

            },
            "writeOptions": {
                "includeContent": true,
                "debug": true
            }
        },
        "uglify": {
            "preserveComments": "license"
        }
    }
}